<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/all_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_dialog_list"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15.0dip">

        <ImageView
            android:id="@id/img_close"
            android:layout_width="60.0dip"
            android:layout_height="20.0dip"
            android:src="@mipmap/arrow_down_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_title"
                android:layout_width="0.0dip"
                android:layout_height="37.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="Query period"
                android:textColor="@color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_setdata"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Time"
                android:textColor="@color/grey"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/starttime"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:gravity="right"
                android:hint="please choose"
                android:textColor="@color/grey"
                android:textSize="18.0sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ff353343" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textColor="@color/grey"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/endtime"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:gravity="right"
                android:hint="please choose"
                android:textColor="@color/grey"
                android:textSize="18.0sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ff353343" />

        <LinearLayout
            android:id="@id/layoutAddress_m"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@id/btn_determine"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_marginBottom="12.0dip"
                android:background="@drawable/btn_login_back"
                android:text="Determine"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>