<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/back_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270.0dip"
        android:layout_height="120.0dip"
        android:background="@drawable/back_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/contral_zhu"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip">

            <ImageView
                android:id="@id/contral_head"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:scaleType="centerInside"
                android:src="@mipmap/ico_well" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@id/contral_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="WELL001"
                    android:textColor="@color/black"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/contral_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="locking"
                    android:textColor="@color/grey"
                    android:textSize="14.0sp" />
            </LinearLayout>

                        <com.leaking.slideswitch.SlideSwitch
                            android:id="@id/contral_btn"
                            android:layout_width="60.0dip"
                            android:layout_height="30.0dip"
                            slideswitch:isOpen="true"
                            slideswitch:shape="circle"
                            slideswitch:themeColor="#ff73aa00" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="15.0dip"
            android:background="#ffe4e4e4" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal">

            <Button
                android:id="@id/no"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center"
                android:lines="1"
                android:text="Cancel"
                android:textColor="#fff26361"
                android:textSize="16.0sp" />

            <View
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:background="#ffe4e4e4" />

            <Button
                android:id="@id/yes"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center"
                android:lines="1"
                android:text="Yes"
                android:textColor="#fff26361"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>